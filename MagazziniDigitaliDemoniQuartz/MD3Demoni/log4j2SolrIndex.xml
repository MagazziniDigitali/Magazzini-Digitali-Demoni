<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Properties>
    <Property name="basePath">./logs/MagazziniDigitali3/Demoni/SolrIndex</Property>
  </Properties>

  <Appenders>
    <RollingFile name="fileLogger"
      fileName="${basePath}/SolrIndex.log"
      filePattern="${basePath}/%d{yyyy}/%d{MM}/%d{dd}/SolrIndex.log">
      <PatternLayout>
        <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
        </pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1"
          modulate="true" />
      </Policies>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Logger name="it.bncf" level="info" additivity="true">
      <appender-ref ref="fileLogger" level="info" />
    </Logger>
    <Root level="error" additivity="false">
      <appender-ref ref="fileLogger" />
    </Root>
  </Loggers>
</Configuration>
